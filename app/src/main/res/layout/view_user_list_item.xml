<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageViewUserListItem"
        android:layout_width="@dimen/user_list_item_circle_image_height"
        android:layout_height="@dimen/user_list_item_circle_image_height"
        android:layout_marginStart="@dimen/user_list_item_circle_image_margin"
        android:layout_marginTop="@dimen/user_list_item_circle_image_margin"
        android:layout_marginBottom="@dimen/user_list_item_circle_image_margin"
        app:civ_border_width="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/user_list_item_login_margin_left"
        android:text="login"
        android:textColor="@color/user_list_item_login_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/circleImageViewUserListItem"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSiteAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/user_list_item_site_admin_margin_top"
        android:text="@string/user_list_item_site_admin"
        android:textSize="@dimen/user_list_item_site_admin_text_size"
        android:background="@drawable/shape_site_admin"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/tvLogin"
        app:layout_constraintTop_toBottomOf="@+id/tvLogin" />
</androidx.constraintlayout.widget.ConstraintLayout>